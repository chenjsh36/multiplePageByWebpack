{
  "extends": "airbnb",  
  "globals": {
    // Put things like jQuery, etc
    "jQuery": true,
    "$": true,
    "echarts": true
  },
  "env": {
    // I write for browser
    "browser": true,
    // in CommonJS
    //"node": true
    // in jQuery
    "jquery": true,
    "es6": true
  },
  "rules": {
    "linebreak-style": 0, // 如果想启用的话这样设置：[1, "windows"] windows 的换行符为 CRLF(\r\n)， unix则为 LF(\r\n)
    "no-console": 1, //console 未删除
    "no-alert": 2,
    "no-eval": 2,
    "no-var": 0,
    "no-new": 0,
    "import/no-unresolved": 0,
    "no-underscore-dangle": [0],
    "prefer-template": 0,
    "object-shorthand": [0],
    "prefer-arrow-callback": 0,
    "prefer-rest-params": 0,
    "no-param-reassign": 0,
    "max-len": ["error", {
      "code": 200,
      "tabWidth": 4,
      "comments": 200,
      "ignoreComments": false,
      "ignoreTrailingComments": false,
      "ignoreUrls": true,
    }],
    "global-require": 0,
    'no-restricted-syntax': [
      2,
      'LabeledStatement',
      'WithStatement',
    ],
    "indent": [1, 4],
    "no-tabs": 1, //  0 = off, 1 = warn, 2 = error
    "comma-dangle": "off", // 不对数组或对象末尾逗号做强制要求
    "semi": "off",
    "eol-last": "off",
    "no-plusplus": "off",
    "no-unused-vars": "warn",
    "import/no-dynamic-require": 1
  }
}